\RequirePackage{forest}
\forestset{qtree/.style={for tree={parent anchor=south, %ajoute des retour de ligne dans les arbres
	child anchor=north,align=center,inner sep=0pt}}}


%Creation des nouvelles commandes
\newcommand*{\dateremise}[1]{\gdef\@dateremise{#1}}
\newcommand*{\prof}[1]{\gdef\@prof{#1}}
\renewcommand*{\title}[1]{\gdef\@title{#1}}
\newcommand*{\subtitle}[1]{\gdef\@subtitle{#1}}
\renewcommand*{\author}[3]{\gdef\@author{#1\\#2\\#3}}

